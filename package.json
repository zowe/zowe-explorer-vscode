    "@types/node": "^14.18.12",
    "@types/vscode": "^1.53.2",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^6.0.0",
    "jest": "^29.3.1",
    "jest-html-reporter": "^3.7.0",
    "jest-junit": "^15.0.0",
    "jest-stare": "^2.4.1",
