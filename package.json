{
  "name": "zowe-explorer",
  "description": "Monorepo for the Zowe Explorer project.",
  "publisher": "Zowe",
  "author": "Zowe",
  "license": "EPL-2.0",
  "repository": {
    "url": "https://github.com/zowe/vscode-extension-for-zowe"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "dependencies": {
    "@zowe/cli": "6.40.29",
    "vscode-nls": "4.1.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.30",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^6.0.0",
    "mocha": "^10.2.0",
    "prettier": "2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3",
    "vsce": "^2.15.0",
    "vscode-nls-dev": "^3.3.2",
    "vscode-test": "^1.4.0",
    "yarn": "1.22.10"
  },
  "resolutions": {
    "**/xml2js": "^0.5.0",
    "**/semver": "^7.5.3"
  },
  "scripts": {
    "prepare": "husky install && yarn build",
    "lint": "yarn workspaces run lint",
    "lintErrors": "yarn workspaces run lintErrors",
    "pretty": "prettier --write .",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "package": "yarn workspaces run package",
    "pretest:integration": "ts-node ./scripts/create-env.ts",
    "posttest:integration": "ts-node ./scripts/clean-env.ts",
    "fresh-clone": "yarn workspaces run fresh-clone && rimraf node_modules"
  }
}
