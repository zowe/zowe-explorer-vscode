    "eslint-plugin-zowe-explorer": "link:packages\\eslint-plugin-zowe-explorer",
    "fancy-log": "^2.0.0",
    "fast-glob": "^3.3.3",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "husky": "^6.0.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jest-mock-vscode": "^3.0.5",
    "jest-stare": "^2.5.3",
    "madge": "^7.0.0",
    "mocha": "^10.8.2",
    "mocha-junit-reporter": "^2.2.1",
    "mocha-multi-reporters": "^1.5.1",
    "node-loader": "^2.1.0",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.3.16",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "webpack": "^5.105.2",
    "webpack-cli": "^5.1.4"
  },
  "pnpm": {
    "neverBuiltDependencies": [],
    "overrides": {
      "ajv@6": "^6.14.0",
      "basic-ftp@5": "^5.2.0",
      "diff@5": "^5.2.2",
      "diff@>5": "^8.0.3",
      "fast-xml-parser": "^5.3.5",
      "fastify": "^5.7.3",
      "js-yaml": "^4.1.1",
      "rollup": "^4.59.0",
      "tar-fs@3": "^3.1.1",
      "tmp": "^0.2.4",
      "undici": "^6.23.0",
      "qs@6": "^6.14.2",
      "ws": "^8.17.1",
      "markdown-it@14": "^14.1.1",
      "minimatch@3": "^3.1.3",
      "minimatch@9": "^9.0.6"
    }
  },
  "scripts": {
    "clean": "pnpm -r clean",
    "fresh-clone": "pnpm -r --parallel fresh-clone && (rimraf node_modules || true)",
    "prepare": "husky install",
    "lint": "pnpm -r lint",
    "lint:html": "pnpm -r lint:html",
    "madge": "pnpm -r madge",
    "pretty": "prettier --write .",
    "build": "pnpm -r --sequential --color --reporter append-only build",
    "build:parallel": "pnpm -r build",
    "test": "pnpm -r --sequential --color --reporter append-only test",
    "test:parallel": "pnpm -r --parallel --color test",
    "package": "pnpm -r --sequential package",
    "preinstall": "npx only-allow pnpm",
    "update-sdks": "pnpm -r update \"@zowe/*@zowe-v3-lts\" \"!@zowe/zowe-explorer-api\" \"!@zowe/zos-ftp-for-zowe-cli\""
  }
}
